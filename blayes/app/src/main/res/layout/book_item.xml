<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/book_item"
    >


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cvbook"
        cardView:cardElevation="3dip"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:clickable="true"
        android:background="#D0E2D0"
        xmlns:cardView="http://schemas.android.com/apk/res-auto"
        cardView:cardPreventCornerOverlap="false"
        >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="0dp"
            android:background="#D0E2D0"
            android:orientation="vertical" >

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/name"
                    android:textColor="#000000"
                    android:text="Nom: Inconnu"
                    android:textSize="15sp"
                    android:padding="4dp"
                    android:layout_weight="1"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/seat"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:text="Places: Inconnu"
                    android:padding="4dp"
                    android:layout_weight="1"
                    />

            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/departure"
                    android:text="DÃ©part: Inconnu"
                    android:textSize="15sp"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:textColor="#000000"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/destination"
                    android:text="Destination: Inconnu"
                    android:textSize="15sp"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:textColor="#000000"
                    />
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:padding="0dp"
                android:background="#D0E2D0"
                android:orientation="horizontal" >

                <Button android:id="@+id/btnCall"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Appeler"
                    android:inputType="textCapWords|textNoSuggestions"
                    android:textColor="#000000"
                    android:drawableLeft="@drawable/ic_call"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:visibility="visible"
                    style="@style/Info"
                    android:clickable="true" />

                <Button android:id="@+id/btnDecline"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Annuler"
                    android:inputType="textCapWords|textNoSuggestions"
                    android:textColor="#000000"
                    android:drawableLeft="@drawable/ic_cancel"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:visibility="visible"
                    style="@style/Info"
                    android:clickable="true" />

            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>