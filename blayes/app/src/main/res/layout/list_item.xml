<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivityFragment"
    android:clickable="true"
    android:id="@+id/list_item"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:layout_margin="0dp">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:cardView="http://schemas.android.com/apk/res-auto"
        cardView:cardCornerRadius="2dip"
        cardView:cardElevation="5dip"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cv"
        android:background="#D0E2D0"
        cardView:cardPreventCornerOverlap="false"
        android:layout_marginLeft="2.5mm"
        android:layout_marginRight="2.5mm"
        android:layout_marginBottom="0.5mm"
        android:layout_marginTop="1.5mm"
        android:clickable="true"
        >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/trip"
            android:layout_margin="0dp"
            android:padding="3dp"
            android:background="#D0E2D0"
            android:orientation="vertical" >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingBottom="0dp"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_person_pin"
                android:paddingRight="5dip"
                android:id="@+id/imageView23" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/departure"
                android:text="Departure"
                android:layout_weight="2"
                android:padding="4dp"
                android:textColor="#000000"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_pin_drop"
                android:paddingRight="5dip"
                android:id="@+id/imageView32" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/destination"
                android:text="Destination"
                android:layout_weight="2"
                android:padding="4dp"
                android:textColor="#000000"
                />

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_watch_later_black"
                android:paddingRight="5dip"
                android:id="@+id/imageView2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/time"
                android:text="Time"
                android:layout_weight="1"
                android:padding="4dp"
                android:textColor="#000000"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_account"
                android:paddingRight="5dip"
                android:id="@+id/imageView21" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/driver"
                android:text="Driver"
                android:layout_weight="1"
                android:padding="4dp"
                android:textColor="#000000"
                />

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/info"
                    android:clickable="true"
                    android:layout_alignParentLeft="true"
                    android:text="Plus d'info"
                    android:inputType="textCapWords|textNoSuggestions"
                    android:textColor="#000000"
                    android:drawableLeft="@drawable/ic_chevron_right_black_24dp"
                    style="@style/Info"
                    />

            </RelativeLayout>


            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/sent"
                android:visibility="gone"
                android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_done"
                android:paddingRight="5dip"
                android:padding="4dp"
                android:id="@+id/imageView212" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Demande envoyée"
                android:layout_weight="1"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:paddingLeft="4dp"
                android:textColor="#655643"
                android:textSize="15sp"
                />
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/conf"
                android:visibility="gone"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_done_all"
                    android:paddingRight="5dip"
                    android:padding="4dp"
                    android:id="@+id/imageView22" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Réservé"
                    android:layout_weight="1"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:paddingLeft="4dp"
                    android:textColor="#655643"
                    android:textSize="15sp"
                    />
            </LinearLayout>

        </LinearLayout>

        </LinearLayout>



    </android.support.v7.widget.CardView>

</LinearLayout>