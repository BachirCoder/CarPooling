    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <!-- Input description -->
        <TextView android:id="@+id/details"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dip"
            android:layout_marginRight="15dip"
            android:layout_marginLeft="15dip"
            android:lines="4"
            android:inputType="textCapSentences|textMultiLine|textNoSuggestions"
            android:gravity="top"
            android:autoText="true"
            android:text="More Info .."
            android:background="#D5D0D8" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/buttons"
        android:paddingRight="13dip"
        android:paddingLeft="13dip"
        android:orientation="vertical"
        android:gravity="center">

        <Button android:id="@+id/btnBook"
            style="@style/NeatButtons"
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:text="Réserver"
            android:gravity="center"
            android:textSize="17sp"
            android:inputType="textCapWords|textNoSuggestions"
            android:clickable="true" />

        <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="55dip"
            android:layout_marginLeft="3dip"
            android:layout_marginRight="3dip"
            android:layout_marginTop="5dip"
            android:layout_marginBottom="5dip"
            android:text="Le chauffeur n'a pas encore confirmé votre réservation."
            android:background="@color/aqua"
            android:gravity="center"
            android:textSize="15dip"
            android:visibility="gone"
            android:clickable="true" />

        <Button android:id="@+id/btnCancel"
            style="@style/CompButtons"
            android:layout_width="match_parent"
            android:layout_height="55dip"
            android:text="Annuler votre demande"
            android:gravity="center"
            android:textSize="17sp"
            android:inputType="textCapWords|textNoSuggestions"
            android:visibility="gone"
            android:clickable="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dip"
