            <Button android:id="@+id/btnCall"
                style="@style/TransButton"
                android:layout_width="match_parent"
                android:layout_height="55dip"
                android:layout_marginRight="10dip"
                android:layout_weight="1"
                android:text="Appeler"
                android:drawableLeft="@android:drawable/stat_sys_phone_call"
                android:gravity="center"
                android:textSize="17sp"
                android:inputType="textCapWords|textNoSuggestions"
                android:clickable="true" />

            <Button android:id="@+id/btnSms"
                style="@style/TransButton"
                android:layout_width="match_parent"
                android:layout_height="55dip"
                android:layout_marginLeft="10dip"
                android:layout_weight="1"
                android:text="Sms"
                android:drawableLeft="@android:drawable/sym_action_chat"
                android:gravity="center"
                android:textSize="17sp"
                android:inputType="textCapWords|textNoSuggestions"

                android:clickable="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dip"
            android:orientation="horizontal"
            android:id="@+id/enableCall"
            android:visibility="gone"
            android:gravity="center">


            <Button android:id="@+id/btnCall2"
                style="@style/CompButtons"
                android:layout_width="match_parent"
                android:layout_height="55dip"
                android:layout_marginRight="10dip"
                android:layout_weight="1"
                android:text="Appeler"
                android:drawableLeft="@android:drawable/stat_sys_phone_call"
