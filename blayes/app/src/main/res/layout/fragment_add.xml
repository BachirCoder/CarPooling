<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:background="@android:color/white"
    android:layout_marginTop="?attr/actionBarSize"
    tools:context="com.bachir.owner.blayes.AddTrip"
    tools:showIn="@layout/add_trip"
    android:orientation="vertical">

    <ScrollView android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" >

        <LinearLayout android:id="@+id/scroll_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:orientation="horizontal" >
        <!-- Name Label -->
        <TextView android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:text="De:"
            android:padding="13sp"
            android:textSize="15sp"
            android:textColor="#000000" />
        <Button
            android:id="@+id/buttonSelectDeparture"
            android:layout_weight="1"
            android:textSize="14sp"
            android:layout_marginRight="15dip"
            android:layout_width="fill_parent"
            android:layout_gravity="center"
            android:layout_height="50dip"
            android:text="Départ"
            android:inputType="textCapWords|textNoSuggestions"
            android:textColor="#000000"
            android:clickable="true" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:orientation="horizontal" >
        <!-- Name Label -->
        <TextView android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:text="À:"
            android:padding="13sp"
            android:textSize="15sp"
            android:textColor="#000000" />
        <Button
            android:id="@+id/buttonSelectDestination"
            android:layout_weight="1"
            android:textSize="14sp"
            android:layout_marginRight="15dip"
            android:layout_width="fill_parent"
            android:layout_gravity="center"
            android:layout_height="50dip"
            android:text="Destination"
            android:inputType="textCapWords|textNoSuggestions"
            android:textColor="#000000"
            android:clickable="true" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:orientation="horizontal" >
        <!-- Name Label -->
        <TextView android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:text="Date:"
            android:padding="13dip"
            android:textSize="15sp"
            android:textColor="#000000" />
        <Button
            android:id="@+id/buttonSelectDate"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginRight="15dip"
            android:layout_width="fill_parent"
            android:layout_gravity="center"
            android:layout_height="50dip"
            android:text="Date"
            android:inputType="textCapWords|textNoSuggestions"
            android:clickable="true"
            />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:orientation="horizontal" >
        <!-- Name Label -->
        <TextView android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:padding="15dip"
            android:text="Horaire:"
            android:textSize="13sp"
            android:textColor="#000000" />
        <Button
            android:id="@+id/buttonSelectTime"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginRight="15dip"
            android:layout_width="fill_parent"
            android:layout_gravity="center"
            android:layout_height="50dip"
            android:text="Horaire"
            android:inputType="textCapWords|textNoSuggestions"
            android:clickable="true"
             />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:orientation="horizontal" >
        <!-- Name Label -->
        <TextView android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:padding="13dip"
            android:text="Places:"
            android:textSize="15sp"
            android:textColor="#000000" />
        <Button
            android:id="@+id/seat"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginRight="15dip"
            android:layout_width="fill_parent"
            android:layout_gravity="center"
            android:layout_height="50dip"
            android:text="0"
            android:clickable="true"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:orientation="horizontal" >
        <!-- Name Label -->
        <TextView android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:text="Prix:"
            android:padding="13dip"
            android:textSize="15sp"
            android:textColor="#000000" />
        <EditText
            android:id="@+id/price"
            android:layout_weight="1"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_marginRight="15dip"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:hint="0.00"
            android:clickable="true" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:orientation="horizontal" >
        <!-- Name Label -->
        <TextView android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:text="Contact:"
            android:padding="13dip"
            android:textSize="15sp"
            android:textColor="#000000" />
        <EditText
            android:id="@+id/contact"
            android:layout_weight="1"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_marginRight="15dip"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:hint="Contact No"
            android:clickable="true" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

    <!-- Input description -->
    <EditText android:id="@+id/inputDesc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dip"
        android:layout_marginRight="15dip"
        android:layout_marginLeft="15dip"
        android:lines="4"
        android:gravity="top"
        android:autoText="true"
        android:textColor="#000000"
        android:hint="Plus d'infos ici .."
        android:inputType="textCapSentences|textMultiLine|textNoSuggestions"
        android:background="@color/grey" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="55dip"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button android:id="@+id/btnPost"
            style="@style/NeatButtons"
            android:layout_width="140dip"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:text="Poster"
            android:gravity="center"
            android:textSize="17sp"
            android:inputType="textCapWords|textNoSuggestions"
            android:clickable="true" />
    </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>