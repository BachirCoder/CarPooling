<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D0E2D0"
    tools:context=".login.LoginActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/CompButtons"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/common_full_open_on_phone"
        android:drawableStart="@drawable/common_full_open_on_phone"
        android:onClick="signInPhone"
        android:textSize="17sp"
        android:inputType="textCapWords|textNoSuggestions"
        android:text="@string/sign_in_with_phone" />

</android.support.design.widget.CoordinatorLayout>
